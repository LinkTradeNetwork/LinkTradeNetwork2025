{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "serve": "/mobile-app.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/mobile-app.html",
    "exclude": ["/icons/*", "/screenshots/*", "*.{css,js,json,png,jpg,svg,ico}"]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".svg": "image/svg+xml"
  },
  "globalHeaders": {
    "cache-control": "public, max-age=3600",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/mobile-app.html",
      "statusCode": 200
    }
  }
}
